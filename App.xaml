<Application x:Class="Bank.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Bank"
             StartupUri="view/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="BankImage" UriSource="Resources/Images/bank.jpg"/>
            <BitmapImage x:Key="TransactionImage" UriSource="Resources/Images/transaction.jpg" />
            <BitmapImage x:Key="LoanImage" UriSource="Resources/Images/loan.jpg" />
            
            <ResourceDictionary.MergedDictionaries>
                <!-- Order is important-->
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Texts.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Containers.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
