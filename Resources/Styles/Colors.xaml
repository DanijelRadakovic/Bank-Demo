<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Bank">

    <Color x:Key="Dark">#1c1c1c</Color>
    <SolidColorBrush x:Key="DarkBrush" Color="{StaticResource Dark}"/>

    <Color x:Key="DarkBlue">#00a8f3</Color>
    <SolidColorBrush x:Key="DarkBlueBrush" Color="{StaticResource DarkBlue}"/>

    <Color x:Key="DarkGreen">#00ef3f</Color>
    <SolidColorBrush x:Key="DarkGreenBrush" Color="{StaticResource DarkGreen}"/>

</ResourceDictionary>